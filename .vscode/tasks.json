{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "clangbuild",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "C++ Build Pretask. Designed for use with Apple Clang. Uses C++ standard 17 by default."
        }
    ],
    "version": "2.0.0"
}